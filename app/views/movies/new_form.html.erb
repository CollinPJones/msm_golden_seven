<div class="container">
  <div class="page-header">
    <h1>Add Movie</h1>
  </div>

  <form class="form-horizontal" action="/create_movie">

    <!-- Get Title -->

    <div class="form-group">
      <label for="title" class="control-label col-sm-2">Title</label>
      <div class="col-sm-10">
        <input type="text" id="title" name="title" class="form-control" placeholder="Title">
      </div>
    </div>

    <!-- Get Year  -->

    <div class="form-group">
      <label for="year" class="control-label col-sm-2">Year</label>
      <div class="col-sm-10">
        <input type="text" id="year" name="year" class="form-control" placeholder="Year">
      </div>
    </div>

    <!-- Get Duration  -->

    <div class="form-group">
      <label for="duration" class="control-label col-sm-2">Duration</label>
      <div class="col-sm-10">
        <input type="text" id="duration" name="duration" class="form-control" placeholder="Duration">
      </div>
    </div>

    <!-- Get Description  -->

    <div class="form-group">
      <label for="description" class="control-label col-sm-2">Description</label>
      <div class="col-sm-10">
        <textarea class="form-control" id="description" name="description" rows="3" placeholder="Description"></textarea>
      </div>
    </div>

    <!-- Get Image URL  -->

    <div class="form-group">
      <label for="image_url" class="control-label col-sm-2">Image url</label>
      <div class="col-sm-10">
        <input type="text" id="image_url" name="image_url" class="form-control" placeholder="Image url">
      </div>
    </div>

    <!-- Submit Button -->
    <div class ="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">CREATE MOVIE</button>
      </div>
    </div>
  </form>
</div>
