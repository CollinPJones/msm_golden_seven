
<div class="container">

  <div class="page-header">
    <h1>Movies</h1>
  </div>
  <p>
    <a href="https://google.com" class="btn btn-primary">Add a New Movie</a>
  </p>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Year</th>
        <th>Duration</th>
        <th>Description</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @movie.each do |movie| %>
      <tr>
        <td><img src="<%= movie.image_url %>" width="80"/></td>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.duration %></td>
        <td><%= movie.description %></td>
        <td><a href="https://www.google.com" class="btn btn-primary">S</a></td>
        <td><a href="https://www.google.com" class="btn btn-warning">S</a></td>
        <td><a href="https://www.google.com" class="btn btn-danger">S</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
