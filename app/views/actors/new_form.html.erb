<div class="container">

  <div class="page-header">
    <h1>Add Actor</h1>
  </div>

  <form class="form-horizontal" action="/create_actor">

    <!-- Get DOB -->

    <div class="form-group">
      <label for="dob" class="control-label col-sm-2">Dob</label>
      <div class="col-sm-10">
        <input id="dob" type="text" name="dob" class="form-control" placeholder="Dob">
      </div>
    </div>

    <!-- Get Name -->

    <div class="form-group">
      <label for="name" class="control-label col-sm-2">Name</label>
      <div class="col-sm-10">
        <input id="name" type="text" name="name" class="form-control" placeholder="Name">
      </div>
    </div>

    <!-- Get Bio -->

    <div class="form-group">
      <label for="bio" class="control-label col-sm-2">Bio</label>
      <div class="col-sm-10">
        <textarea id="bio" name="bio" class="form-control" placeholder="Bio" rows="3"></textarea>
      </div>
    </div>

    <!-- Get Image URL -->

    <div class="form-group">
      <label for="image_url" class="control-label col-sm-2">Image url</label>
      <div class="col-sm-10">
        <input id="image_url" type="text" name="image_url" class="form-control" placeholder="Image url">
      </div>
    </div>

    <!-- Submit Button -->

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">CREATE ACTOR</button>
      </div>
    </div>

</form>

</div>
